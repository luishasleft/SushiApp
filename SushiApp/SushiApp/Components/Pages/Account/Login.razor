    </header>

    <!-- Main Hero Section -->
    <main class="hero-section">
        <div class="hero-content">
            <div class="row">
                <div class="login-box">
                    <EditForm Model="@Model" OnValidSubmit="Authenticate" FormName="LoginForm">
                        <DataAnnotationsValidator/>
